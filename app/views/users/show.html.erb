<main>
  <p id="notice"></p>
    <div class="container px-5 px-sm-0">
     <div class="row">
      <%= render 'user_info_and_new_book', user: @user, book: @book %>

        <div class="col-md-8 offset-md-1">
         <h2>Books</h2>
         <table class="table table-hover table-inverse">
          <thead>
           <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
           </tr>
          </thead>
          <tbody>
           <% @books.each do |book| %>
            <tr>
            <th>
             <%= link_to book.user do %>
              <% if book.user.profile_image.attached? %>
               <%= image_tag book.user.profile_image.variant(resize: "50x50"), alt: "User Image" %>
              <% else %>
               <%= image_tag 'no_image.jpg', size: "80x80", alt: "No Image" %>
              <% end %>
             <% end %>
            </th>
            <th> <%= link_to book.title, book_path(book) %></th>
            <th><%= book.body %></th>
            <th colspan="3"></th>
           </tr>
           <% end %>
          </tbody>
         </table>
        </div>
       </div>
     </div>
    </div>
</main>


