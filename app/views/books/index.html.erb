<main>
<p id="notice"></p>
 <div class="container px-5 px-sm-0">

  <% if @book.errors.any? %>
    <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
     <ul>
     <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>

  <div class="row">
   <%= render 'book_info', book: @book %>

     <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
        </tr>
       </thead>
      
       <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
             <%= link_to user_path(book.user) do %>
              <% if book.user.profile_image.attached? %>
               <%= image_tag book.user.profile_image.variant(resize: "80x80"), alt: "User Image" %>
              <% else %>
               <%= image_tag 'no_image.jpg', size: "80x80", alt: "No Image" %>
              <% end %>
             <% end %>
            </td>
            <td>
             <%= link_to book.title, book_path(book), class: "book-link" %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
       </tbody>
      </table>
     </div>
  </div>
 </div>
</main>

